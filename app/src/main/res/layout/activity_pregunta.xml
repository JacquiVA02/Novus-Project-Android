<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backquestion"
    tools:context=".PreguntaActivity">

    <TextView
        android:id="@+id/text0"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="#0B1741"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="DuplicateIds" />

    <ImageView
        android:id="@+id/buttonBackQuestion"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:rotation="179"
        android:rotationX="1"
        android:rotationY="1"
        app:layout_constraintBottom_toBottomOf="@+id/text0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.002"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/back"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text0"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="#0B1741"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="DuplicateIds,VisualLintOverlap" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/text0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TextSizeCheck">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/coin"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/CoinQuestion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:layout_weight="1"
            android:paddingLeft="8sp"
            android:paddingTop="1sp"
            android:text="000"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/text0"
        app:layout_constraintTop_toTopOf="@+id/text0"
        app:layout_constraintVertical_bias="0.741">

        <ImageView
            android:id="@+id/CoffeeComodin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_profile"
            android:paddingLeft="5sp"
            android:paddingTop="10sp"
            android:paddingRight="5sp"
            android:paddingBottom="10sp"
            app:srcCompat="@drawable/coffee"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <TextView
            android:id="@+id/coffeeUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:ignore="DuplicateIds,HardcodedText" />

        <ImageView
            android:id="@+id/EraserComodin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_profile"
            android:paddingLeft="5sp"
            android:paddingTop="10sp"
            android:paddingRight="5sp"
            android:paddingBottom="10sp"
            android:rotationX="2"
            android:rotationY="-181"
            app:srcCompat="@drawable/eraser"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <TextView
            android:id="@+id/eraserUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/CandyComodin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_profile"
            android:paddingLeft="5sp"
            android:paddingTop="10sp"
            android:paddingRight="5sp"
            android:paddingBottom="10sp"
            app:srcCompat="@drawable/candy"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <TextView
            android:id="@+id/candyUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <TextView
        android:id="@+id/imageViewQuestion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="280dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/text0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="VisualLintOverlap" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewQuestion">

        <ImageView
            android:id="@+id/imageResponse1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_answer"
            tools:ignore="ContentDescription,ImageContrastCheck,RtlHardcoded"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageResponse2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_answer"
            tools:srcCompat="@tools:sample/avatars"
            tools:ignore="ContentDescription,RtlHardcoded" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/text0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <ImageView
            android:id="@+id/imageResponse3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_answer"
            tools:ignore="ContentDescription,ImageContrastCheck,RtlHardcoded"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageResponse4"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_answer"
            tools:ignore="ContentDescription,RtlHardcoded,ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageQuestion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewQuestion"
        app:layout_constraintEnd_toEndOf="@+id/imageViewQuestion"
        app:layout_constraintStart_toStartOf="@+id/imageViewQuestion"
        app:layout_constraintTop_toTopOf="@+id/imageViewQuestion"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/duckEmotion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@null"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:background="#FFF6A8"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="Categoria"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>